{
  "manifest_version": 3,
  "name": "Glanceify",
  "version": "1.0.0",
  "description": "Speed read any text on the web. Select text and read it word-by-word with RSVP technology.",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
